<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Declara que la cámara es una característica esencial para tu app -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <!-- Permisos requeridos -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <!-- Permiso específico para servicios que usan la cámara (requerido para Android 14+) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_CAMERA" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Watcher"
        tools:targetApi="31">

        <activity
            android:name="com.jhoxmanv.watcher.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Watcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--
            CORRECCIÓN PRINCIPAL: Se añadió 'android:foregroundServiceType="camera"' a la declaración del servicio.
            Esto le dice al sistema que este servicio usará la cámara mientras esté en primer plano.
        -->
        <service
            android:name="com.jhoxmanv.watcher.service.WatcherService"
            android:foregroundServiceType="camera" />

        <receiver
            android:name="com.jhoxmanv.watcher.service.DeviceAdmin"
            android:description="@string/device_admin_description"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_DEVICE_ADMIN"
            android:exported="true">
            <meta-data
                android:name="android.app.device_admin"
                android:resource="@xml/device_admin" /> <!-- Asegúrate de que este archivo XML se llame 'device_admin.xml' -->
            <intent-filter>
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>
