<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:padding="12dp"
    android:background="@drawable/bg_gradient">

    <!-- Barra superior -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:text="EyeWatch — Detector de Mirada (Beta)"
        android:textSize="20sp"
        android:textStyle="bold"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#1F2937"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnRequestPermission"
        app:layout_constraintHorizontal_bias="0" />

    <Button
        android:id="@+id/btnRequestPermission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solicitar permiso"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvTitle" />

    <!-- Lista simple de permisos -->
    <LinearLayout
        android:id="@+id/permissionsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/labelPermissions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Permisos requeridos"
            android:textStyle="bold"
            android:textColor="#0F172A" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/permissionCameraLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cámara frontal"
                android:textSize="16sp"
                android:textColor="#0F172A" />

            <TextView
                android:id="@+id/permissionCameraStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="—"
                android:textStyle="bold"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="#0F172A"/>
        </LinearLayout>
    </LinearLayout>

    <!-- PreviewView para CameraX (lado derecho) -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="#22000000"
        android:scaleType="fitCenter"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/permissionsContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/scrollMain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.36"
        app:layout_constraintHeight_default="spread" />

    <!-- ScrollView principal (lado izquierdo) -->
    <ScrollView
        android:id="@+id/scrollMain"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@+id/permissionsContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/previewView">

        <LinearLayout
            android:id="@+id/scrollContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="18dp">

            <!-- Caja de estado (CardView para sombra y esquinas) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/frameStatusContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:padding="14dp">

                <LinearLayout
                    android:id="@+id/viewStatus"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:background="@android:color/holo_red_dark">

                    <TextView
                        android:id="@+id/tvStatusText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NO MIRANDO"
                        android:textStyle="bold"
                        android:textSize="28sp"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/tvStatusSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="El detector no detecta la mirada"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Yaw -->
            <TextView
                android:id="@+id/labelYaw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Umbral rotación horizontal (Yaw):"
                android:textStyle="bold"
                android:textColor="#0F172A"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="12dp">

                <SeekBar
                    android:id="@+id/seekBarYaw"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="90"
                    android:progress="9"/>

                <TextView
                    android:id="@+id/textYawValue"
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:text="9°"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:textColor="#0F172A"/>
            </LinearLayout>

            <!-- Pitch -->
            <TextView
                android:id="@+id/labelPitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Umbral rotación vertical (Pitch):"
                android:textStyle="bold"
                android:textColor="#0F172A"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="12dp">

                <SeekBar
                    android:id="@+id/seekBarPitch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="90"
                    android:progress="20"/>

                <TextView
                    android:id="@+id/textPitchValue"
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:text="20°"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:textColor="#0F172A"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvHelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Consejos:\n• Ajusta los umbrales para que la caja se ponga en verde cuando mires de frente.\n• El Preview ayuda a calibrar; desactívalo si no quieres ver la cámara.\n• Esta beta solo detecta dentro de la app."
                android:textSize="13sp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="12dp"
                android:textColor="#0F172A"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="32dp"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
